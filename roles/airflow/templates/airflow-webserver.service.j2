[Unit]
Description=Airflow webserver daemon
After=network.target

[Service]
EnvironmentFile=/home/airflow/airflow-environment
User=airflow
Group=airflow
Type=simple
ExecStart=/bin/bash -ilc 'conda activate o3 && airflow webserver -p {{ airflow_port }}'
RestartSec=5s

[Install]
WantedBy=multi-user.target
