[Unit]
Description=Airflow webserver daemon
After=network.target

[Service]
EnvironmentFile=/home/airflow/airflow-environment
User=airflow
Group=airflow
Type=simple
ExecStart=/bin/bash -c '/home/airflow/anaconda3/bin/conda activate o3; airflow webserver -p 8080'
RestartSec=5s

[Install]
WantedBy=multi-user.target
